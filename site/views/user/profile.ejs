<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="perfil">
        <%- include('../partials/header') %>

            <main class="vistaUser" id="userForms">
                <h1>Bienvenid@</h1>
                <form action="/profile/<%=user.id%>?_method=PUT" method="post" enctype="multipart/form-data">
                    <!-- EMAIL -->
                    <section class="container bottom">
                        <label class="email_user">Email: <%=user.email %> </label>
                    </section>
                    <!-- FOTO DE PERFIL -->
                    <section class="container bottom">
                        <img src="/img/usuario/<%=user.foto %>" alt="foto de perfil">
                        <div class="avatar_edit">
                            <input name="avatar" type='file' id="imageUpload" accept="image/*" />
                            <label for="imageUpload" class="fas fa-pencil-alt"></label>
                        </div>
                    </section>
                    <!-- NOMBRE -->
                    <section class="container bottom">
                        <label for="name">Nombre</label>
                        <input type="text" name="name" id="name" placeholder="Ingrese su nombre"
                            value="<%=user.nombre %>">
                        <small class="error-msg" id="errorName">
                            <%= locals.errors && errors.name? errors.name.msg : null %>
                        </small>
                    </section>
                    <!-- APELLIDO -->
                    <section class="container bottom">
                        <label for="apellido">Apellido</label>
                        <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido"
                            value="<%=user.apellido %>">
                        <small class="error-msg" id="errorApellido">
                            <%= locals.errors && errors.apellido? errors.name.msg : null %>
                        </small>
                    </section>
                    <!-- GENERO -->
                    <section class="container bottom">
                        <label for="genero">Genero</label>
                        <select name="genero" id="genero">
                            <option value="<%=user.id_generos %>">
                                <%=user.id_generos %>
                            </option>
                            <option value="Seleccione su genero" disabled>Seleccione su genero</option>
                            <option value="1">Female</option>
                            <option value="2">Male</option>
                            <option value="3">Non-binary</option>
                        </select>
                    </section>
                    <!-- PAIS -->
                    <section class="container bottom">
                        <label for="pais">Pais</label>
                        <select name="pais" id="pais">
                            <option value="<%=user.id_paises %>">
                                <%=user.id_paises %>
                            </option>
                            <option value="Seleccione su pais" disabled>Seleccione su pais</option>
                            <option value="1">Argentina</option>
                            <option value="2">Chile</option>
                            <option value="3">Uruguay</option>
                            <option value="4">Brasil</option>
                            <option value="5">Peru</option>
                        </select>
                    </section>

                    <!-- PROVINCIA 
                        <section class="container bottom">
                            <label for="provincia">Provincia</label>
                            <select name="provincia" id="provincia">
                                <option value=></option>
                                    <option value="Seleccione su provincia" disabled>Seleccione su provincia</option>
                                    <option value="1">Buenos Aires</option>
                                    <option value="2">Neuquen</option>
                                    <option value="3">Cordoba</option>
                                </select>
                            </section>
                        -->

                    <!-- DIRECCION -->
                    <section class="container bottom">
                        <label for="direccion">Direccion</label>
                        <input type="text" name="direccion" id="direccion" placeholder="Ingrese su direccion"
                            value="<%=user.direccion %>">
                        <small class="error-msg" id="errorDireccion">
                            <%= locals.errors && errors.direccion? errors.name.msg : null %>
                        </small>
                    </section>
                    <!-- CODIGO POSTAL -->
                    <section class="container bottom">
                        <label for="direccion">Codigo Postal</label>
                        <input type="number" name="codigopostal" id="codigopostal"
                            placeholder="Ingrese su codigo postal" value="<%=user.cp %>">
                        <small class="error-msg" id="errorCodigopostal">
                            <%= locals.errors && errors.codigopostal? errors.name.msg : null %>
                        </small>
                    </section>
                    <!-- TELEFONO -->
                    <section class="container bottom">
                        <label for="numero">Telefono</label>
                        <input type="number" name="numero" id="numero" placeholder="Ingrese su numero de telefono"
                            value="<%=user.telefono %>">
                        <small class="error-msg" id="errorNumero">
                            <%= locals.errors && errors.numero? errors.name.msg : null %>
                        </small>
                    </section>
                    <!-- BOTON -->
                    <section class="buttons">
                        <button type="submit">Guardar</button>
                    </section>
                </form>
            </main>

            <script src="/javascript/profileValidator.js"></script>

            <%- include('../partials/footer') %>
    </body>

</html>