<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="perfil">
        <%- include('../partials/header') %>

            <main class="vistaUser" id="userForms">
                <h1>Bienvenid@</h1>
                <!--REVISAR PARA QUE FUNCIONE EL POST-->
                <form action="/profile/<%=user.id%>?_method=PUT" method="post" enctype="multipart/form-data">
                    <!--EMAIL-->
                    <section class="container bottom">
                        <label class="email_user">Email: <%=user.email %> </label>
                    </section>
                    <!--REVISAR PARA QUE FUNCIONE-->
                    <!--FOTO DE PERFIL-->
                    <section class="container bottom">
                        <img src="" alt="">
                        <div class="avatar_edit">
                            <input name="avatar" type='file' id="imageUpload" accept="image/*" />
                            <label for="imageUpload" class="fas fa-pencil-alt"></label>
                        </div>
                    </section>
                    <!--NOMBRE-->
                    <section class="container bottom">
                        <label for="name">Nombre</label>
                        <input type="text" name="name" id="name" placeholder="Ingrese su nombre"
                            value="<%=user.nombre %>">
                    </section>
                    <!--APELLIDO-->
                    <section class="container bottom">
                        <label for="apellido">Apellido</label>
                        <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido"
                            value="<%=user.apellido %>">
                    </section>
                    <!--GENERO-->
                    <section class="container bottom">
                        <label for="genero">Genero</label>
                        <select name="genero" id="genero">
                            <option value="<%=user.genero %>">
                            <option value="Seleccione su genero">Seleccione su genero</option>
                            <option value="1">Female</option>
                            <option value="2">Male</option>
                            <option value="3">Non-binary</option>
                        </select>
                    </section>
                    <!--PAIS-->
                    <section class="container bottom">
                        <label for="pais">Pais</label>
                        <select name="pais" id="pais">
                            <option value="<%=user.pais %>">
                            <option value="Seleccione su pais">Seleccione su pais</option>
                            <option value="1">Argentina</option>
                            <option value="2">Chile</option>
                            <option value="3">Uruguay</option>
                            <option value="4">Brasil</option>
                            <option value="5">Peru</option>
                        </select>
                    </section>
                    <!--DIRECCION-->
                    <section class="container bottom">
                        <label for="direccion">Direccion</label>
                        <input type="text" name="direccion" id="direccion" placeholder="Ingrese su direccion"
                            value="<%=user.direccion %>">
                    </section>
                    <!--CODIGO POSTAL-->
                    <section class="container bottom">
                        <label for="direccion">Codigo Postal</label>
                        <input type="text" name="codigopostal" id="codigopostal" placeholder="Ingrese su codigo postal"
                            value="<%=user.codigopostal %>">
                    </section>
                    <!--TELEFONO-->
                    <section class="container bottom">
                        <label for="numero">Telefono</label>
                        <input type="text" name="numero" id="numero" placeholder="Ingrese su numero de telefono"
                            value="<%=user.numero %>">
                    </section>
                    <!--FECHA NACIMIENTO-->
                    <section class="container bottom">
                        <label for="birthday_date">Cumplea√±os:</label>
                        <input type="date" name="birthday_date" id="birthday_date" value="2017-01-01">
                        <span class="text-danger"></span>
                    </section>
                    <!--BOTON-->
                    <section class="buttons">
                        <button type="submit">Guardar</button>
                    </section>
                </form>
            </main>

            <%- include('../partials/footer') %>
    </body>

</html>