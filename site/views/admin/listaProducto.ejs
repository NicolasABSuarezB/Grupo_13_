<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

  <body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <%- include('../partials/header') %>
      <main class="lista">
        
        <h1>Admin</h1>
        <a href="/admin/crear">
          <button type="button" class="btn btn-primary">Crear Producto</button>
        </a>
        <section class="megalista">
          <% productos.forEach(producto=> { %>
            <div class="contenedorlista" onclick="window.location = '/detalle/<%= producto.id %>'">
              <div class="listaproducto">
                <img src="/img/imgproducto/<%= producto.imagen %>" alt="">
              </div>
              <div class="descripcion">
                <div><h5>nombre:</h5><div><p class="nombreproduc"> <%= producto.titulo %></p></div></div>
                <div><h5>precio :</h5><div><p class="precioproduc">$<%= producto.precio %></p></div></div>
                <div><h5>descuento:</h5><div><p class="descuentoproduct"><%= producto.descuento %>%</p></div></div>
                <div><h5>st0ck:</h5><div><p class="stockproduct"><%= producto.stock %></p></div></div>
                
                
                

               
            </div>
            <div class="botones">
              <a href="/admin/edit/<%= producto.id%>">
                <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
              </a>
              <form action="/admin/destruir/<%= producto.id%>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
              </form>
            </div>
            </div>
          <% }) %>
        </section>
        

        
        
        
      </main>
      <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>