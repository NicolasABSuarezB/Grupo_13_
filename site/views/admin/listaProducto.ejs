<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

  <body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <%- include('../partials/header') %>
      <main class="lista">
        <h1 style="margin-left: 3%;">Admin</h1>
        <a href="/admin/Crear">
          <button type="button" class="btn btn-primary" style="margin-left: 3%; margin-bottom: 1%;">Crear Producto</button>
        </a>

        </a>
        <div class="table-responsive">
          <div class="filtros col-12 d-flex flex-wrap" id="filter">
            <div class="col-12 my-1" style="width: 90%; margin: auto;">
              <input class="form-control" name="nombre" type="text" placeholder="Name">
            </div>

            <div style="margin: auto; width: 100%; display: flex; justify-content: space-evenly;">
              <div class="col-3 my-1" style="width: 30%;">
                <select class="form-select" name="categoriasId" aria-label="Default select example">
                  <option value="0" selected>Categoria</option>
                  <% categorias.forEach(categoria=> { %>
                    <option value="<%= categoria.id %>">
                      <%= categoria.categoria %>
                    </option>
                    <% }) %>
                </select>
              </div>

              <div class="col-3 my-1" style="width: 30%;">
                <select class="form-select" name="marcasId" aria-label="Default select example">
                  <option value="0" selected>Marca</option>
                  <% marcas.forEach(marcas=> { %>
                    <option value="<%= marcas.id %>">
                      <%= marcas.marca%>
                    </option>
                    <% }) %>
                </select>
              </div>

              <div class="col-3 my-1" style="width: 30%;">
                <select class="form-select" name="orderDirect" aria-label="Default select example">
                  <option value="0" selected>Order By</option>
                  <option value="ASC">Ascendente</option>
                  <option value="DESC">Descendente</option>
                </select>
              </div>

            </div>
          </div>

          <section class="megalista" id="contain-tbody">

          </section>

          <div class="col-12 d-flex justify-content-between align-items-center">

            <div class="col-2 size " id="size" style="padding-left: 5%;">
              <select class="form-select" name="size" aria-label="Default select example">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
              </select>
            </div>


            <nav aria-label="Page navigation example" style="padding-right: 4%;">
              <ul class="pagination justify-content-end" id="pages-links">
              </ul>
            </nav>

          </div>

          <template id="tempale-tbody">
            <div class="contenedorlista wow animate__animated animate__bounceInUp">


              <div class="listaproducto ">
                <img id="imagen" src="" alt="">
              </div>
              <div class="descripcion">
                <div>
                  <h5>nombre:</h5>
                  <div>
                    <p class="nombreproduc" id="nombre"> </p>
                  </div>
                </div>
                <div>
                  <h5>precio :</h5>
                  <div>
                    <p class="precioproduc" id="precio"></p>
                  </div>
                </div>
                <div>
                  <h5>descuento:</h5>
                  <div>
                    <p class="descuentoproduct" id="descuento">%</p>
                  </div>
                </div>
                <div>
                  <h5>stock:</h5>
                  <div>
                    <p class="stockproduct" id="stock"></p>
                  </div>
                </div>
              </div>
              <div class="botones">
                <a href="" id="btn-edit">
                  <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                </a>
                <form action="" id="btn-delete" method="post">
                  <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                </form>
              </div>

            </div>



          </template>
        </div>
      </main>
      <%- include('../partials/footer') %>
        <script src="/javascript/paginacion.js"></script>
        <script src="/javascript/sweetAlert.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>