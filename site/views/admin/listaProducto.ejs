<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

  <body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <%- include('../partials/header') %>
      <main>
        
        <h1>Admin</h1>
        <a href="/admin/crear">
          <button type="button" class="btn btn-primary">Crear Producto</button>
        </a>
        
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">producto</th>
                <th scope="col">stock</th>
                <th scope="col">Precio</th>
                <th scope="col">Des</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
              <% productos.forEach(producto=> { %>
                <tr>

                  <th scope="row"><a href="/admin/edit/<%= producto.id %>">
                      <%= producto.id %>
                    </a></th>
                
                  <td colspan="1"><a href="/admin/edit/<%= producto.id %>">
                      <%= producto.titulo %>
                    </a></td>
                  <td><a href="/admin/edit/<%= producto.id %> ">
                      <%= producto.stock %>
                    </a></td>
                  <td><a href="/admin/edit/<%= producto.id %> ">
                      <%= producto.precio %>
                    </a></td>
                  <td><a href="/admin/edit/<%= producto.id %> ">
                      <%= producto.descuento %>
                    </a></td>
                  <td>
                    <div>
                      <a href="/admin/edit/<%= producto.id%>">
                        <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                      </a>
                      <form action="/admin/destruir/<%= producto.id%>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                      </form>
                    </div>
                  </td>

                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </main>
      <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>