                    <section class="homearticulos  wow animate__animated animate__fadeInUp">


                        <div class="glider-contain">
                            <div class="glider">
                                <% let tipovista=['productohome','productohometablet','productohomedestock',]; for (let
                                    index=0; index < 6; ) { %>

                                    <%- include('./partials/productoHome2',{ imagen:productos[index].imagen,
