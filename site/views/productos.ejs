<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{title: 'Loving Paws' }) %>
    <body class="contenedor-listado">
        <%- include('./partials/header') %>
            <main class="listado">
                <h1>nuestros productos</h1>
                <template id="tempale-tbod">
                    <article class="card">
                        <div class="imagen" > 
                            <img id="imagen"src="" alt="">
                        </div>
                        <div class="content">
                            <h3 id="nombre"> </h3>
                            <div class="detail">
                                <div class="precio-descuento">
                                    <p class="precio-secundario">$<del> </del><small id="descuento"></small></p>
                                    <p id="precio" class="precio-principal"></p>
                                </div>
                                <a id="btn-edit">
                                    <button name="button"><i class="fas fa-shopping-cart"></i>añadir carrito</button>
                                </a>
                            </div>
                            
                        </div>
                    </article>

                </template>
                <section class="project">
                    <% productos.forEach(producto => { %>
                        <article class="card">
                            <div class="imagen" onclick="window.location = '/detalle/<%= producto.id %>'">  
                                <img src="/img/imgproducto/<%= producto.imagen %>" alt="">
                            </div>
                            <div class="content">
                                <h3> <%= producto.titulo %>  </h3>
                                <div class="detail">
                                    <div class="precio-descuento">
                                        <p class="precio-secundario">$<del><%=  producto.precio %> </del><small><%= producto.descuento %> %</small></p>
                                        <p class="precio-principal">$<%- toThousand(Math.round(producto.precio - ( producto.precio * producto.descuento / 100))) %></p>
                                    </div>
                                    <a href=" /carrito">
                                        <button name="button"><i class="fas fa-shopping-cart"></i>añadir carrito</button>
                                    </a>
                                </div>
                                
                            </div>
                        </article>
                    <% }) %>
                </section>
            </main>
            <%- include('./partials/footer') %>
            <script src="/javascript/vistaproductos.js"></script>
    </body>
</html>